.btn-primary
	background color_base
	border-color color_base
	border none
	&:hover
		background lighten(color_base, 10)
	&:focus
		background-color darken(color_base, 10)
.navbar-default
		border-color transparent
		background-color transparent
	.navbar-nav
		li:last-child a
			width auto
			color color_base
		> li a
			background-color #f8f8f8
			padding 0.5em 1em
			color black
			letter-spacing: 0.2em
			border: 1px solid rgba(black,0.1)
			width 17rem
			font-size 14px
			text-align center
			&:hover
				color color_base !important
.form-control
	border-radius 0
	&:focus
		border-color color_base
		box-shadow inset 0 1px 1px rgba(0,0,0,0.2), 0 0 8px rgba(color_base, .6)
.navbar-brand
	display none
@media(max-width:1280px)
	.navbar-nav
		> li a
			letter-spacing normal
			width 140px
@media (max-width: 1200px) {
    .navbar-header {
        float: none;
    }
    .navbar-left,.navbar-right {
        float: none !important;
    }
    .navbar-toggle {
        display: block;
    }
    .navbar-collapse {
        border-top: 1px solid transparent;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .navbar-fixed-top {
		top: 0;
		border-width: 0 0 1px;
	}
    .navbar-collapse.collapse {
        display: none!important;
    }
    .navbar-nav {
        float: none!important;
		margin-top: 7.5px;
	}
	.navbar-nav>li {
        float: none;
    }
    .navbar-nav>li>a {
        padding-top: 10px;
        padding-bottom: 10px;
        width: 100%;
    }
    .collapse.in{
  		display:block !important;
	}
	.navbar-brand{
		display: inline-block
	}
}